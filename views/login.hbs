    <div class="container">
      <h1>Login Page</h1>
        <p class="lead">This is our login page!</p>
        <br>
        <form id="form" role="form" class="" action="/login" method="post">
          <div class="form-group">
            <input id="username" class="form-control" type="text" name="username" placeholder="Enter Username">
          </div>
          <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="password">
            <button id="formSubmit" class="btn btn-success" type="button" name="button">Submit</button>
            &nbsp;
            <a class="btn btn-primary" href="/">Cancel</a>

          </div>
        </form>


    </div>

<script>


document.getElementById('formSubmit').addEventListener('click', sendForm, false);

function sendForm() {
  var user = document.getElementById('username').value;
  localStorage.setItem('username', user);
  document.getElementById('form').submit();
}

</script>
